Bootstrap: docker
From: oraclelinux:7

%help
    This is a demo image to test CernVM-FS deployment on ITS resources

%labels
    Author Nicholas Schiraldi

%environment
    export PS1=(cernvmfs)$PS1
    
%post 
    yum -y update && yum -y install https://ecsft.cern.ch/dist/cvmfs/cvmfs-release/cvmfs-release-latest.noarch.rpm && yum install -y cvmfs
